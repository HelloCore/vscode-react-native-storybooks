{
    "name": "vscode-react-native-storybooks",
    "displayName": "React Native Storybooks",
    "description": "Show your React Native Storybooks inline in VS Code",
    "version": "0.0.1",
    "publisher": "Orta",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Storybooks",
        "React Native"
    ],
    "activationEvents": [
        "onCommand:extension.showStorybookPreview"
    ],
    "main": "./out/src/extension",
    "contributes": {
       "commands": [
            {
                "command": "extension.showStorybookPreview",
                "title": "Show Storybooks"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "extension.showStorybookPreview",
                    "when": "resourceLangId == javascript"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}